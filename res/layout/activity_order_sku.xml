<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_50"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">

    <TextView
        android:id="@+id/activity_order_sku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/activity_order_sku"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/activity_order_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/dot"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/activity_order_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/activity_order_quantity"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/activity_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:text="@string/dot"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="@dimen/text_size_large" />
</LinearLayout>