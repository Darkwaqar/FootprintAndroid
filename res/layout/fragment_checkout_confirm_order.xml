<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/frag_checkout_confirm_details_txtview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:text="@string/confirm_details"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/checkout_confirm_cardview1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frag_checkout_confirm_details_txtview"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/adapter_location_method_loc_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                app:textAllCaps="true" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/adapter_location_method_loc_method_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/adapter_location_method_loc_heading"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_toLeftOf="@+id/adapter_location_method_loc_price_arrow"
                android:layout_toStartOf="@+id/adapter_location_method_loc_price_arrow"
                android:text="@string/dot"
                app:textAllCaps="true" />

            <ImageView
                android:id="@+id/adapter_location_method_loc_price_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:src="@drawable/nav_category_right" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/adapter_location_method_loc_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/adapter_location_method_loc_method_desc"
                android:layout_marginTop="@dimen/margin_15"
                android:text="@string/dot"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:textAllCaps="true" />

            <TextView
                android:id="@+id/adapter_location_method_loc_price_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adapter_location_method_loc_method_desc"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_toLeftOf="@id/adapter_location_method_loc_price_value"
                android:layout_toStartOf="@id/adapter_location_method_loc_price_value"
                android:text="@string/price"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/checkout_confirm_cardview2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkout_confirm_cardview1"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/adapter_location_listing_loc_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                app:textAllCaps="true" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/adapter_location_listing_loc_listing_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adapter_location_listing_loc_addr"
                android:layout_marginTop="@dimen/margin_5"
                android:text="@string/dot"
                app:textAllCaps="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:src="@drawable/nav_category_right" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/payment_method_card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkout_confirm_cardview2"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/adapter_payment_method_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:src="@drawable/nav_category_right" />

            <ImageView
                android:id="@+id/adapter_payment_method_icon"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/adapter_payment_method_loc_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/adapter_payment_method_icon"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/dot"
                app:textAllCaps="true" />

            <TextView
                android:id="@+id/adapter_payment_method_loc_price_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adapter_payment_method_icon"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_toLeftOf="@id/adapter_payment_method_loc_price_value"
                android:layout_toStartOf="@id/adapter_payment_method_loc_price_value"
                android:text="@string/fees"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/adapter_payment_method_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_toEndOf="@id/adapter_payment_method_icon"
                android:layout_toRightOf="@id/adapter_payment_method_icon"
                android:text="@string/dot"
                android:textSize="@dimen/text_size_normal" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/checkout_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/margin_20"
        android:text="@string/confirm" />

</RelativeLayout>