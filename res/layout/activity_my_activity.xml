<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_my_account_appbar"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/activity_my_account_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/black"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_pic"
                android:contentDescription="@string/app_name"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/activity_my_account_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@android:color/white"
                android:padding="@dimen/margin_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_my_account_dob_lbl_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_sign_up_dob"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/activity_my_account_name_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text="@string/dot"
                        android:textColor="@color/dialog_color"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/activity_my_account_dob_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/dot"
                        android:textColor="@color/dialog_color"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/activity_my_account_email_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/dot"
                        android:textColor="@color/dialog_color"
                        android:textSize="@dimen/text_size_medium" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10">

                    <TextView
                        android:id="@+id/activity_my_account_location_lbl_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_sign_up_location"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/activity_my_account_location_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/dot"
                        android:textColor="@color/dialog_color"
                        android:textSize="@dimen/text_size_medium"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/activity_my_account_street_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/dot"
                        android:textColor="@color/dialog_color"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/activity_my_account_city_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/dot"
                        android:textColor="@color/dialog_color"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/activity_my_account_country_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/dot"
                        android:textColor="@color/dialog_color"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10">

                    <TextView
                        android:id="@+id/activity_my_account_contact_lbl_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_sign_up_contact"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/activity_my_account_number_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/dot"
                        android:textColor="@color/dialog_color"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/activity_my_account_company_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/dot"
                        android:textColor="@color/dialog_color"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/activity_my_account_fax_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:text="@string/dot"
                        android:textColor="@color/dialog_color"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>