<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#051C3B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:contentDescription="@string/app_name"
            android:paddingTop="@dimen/margin_20"
            android:src="@drawable/logo" />


        <LinearLayout
            android:id="@+id/activity_registration_edittext_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/activity_registration_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/roundcornertextbox"
                android:ems="10"
                android:hint="@string/Name"
                android:maxLines="1"
                android:padding="@dimen/margin_10"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/roundcornertextbox"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/activity_registration_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:background="@drawable/roundcornertextbox"
                    android:drawableEnd="@drawable/dropdown_spinner"
                    android:drawableRight="@drawable/dropdown_spinner"
                    android:hint="@string/day"
                    android:padding="@dimen/margin_10"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/activity_registration_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_weight="0.5"
                    android:drawableEnd="@drawable/dropdown_spinner"
                    android:drawableRight="@drawable/dropdown_spinner"
                    android:hint="@string/month"
                    android:padding="@dimen/margin_10"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/activity_registration_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:drawableEnd="@drawable/dropdown_spinner"
                    android:drawableRight="@drawable/dropdown_spinner"
                    android:hint="@string/year"
                    android:padding="@dimen/margin_10"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp" />
            </LinearLayout>


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/activity_registration_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/roundcornertextbox"
                android:ems="10"
                android:hint="@string/email"
                android:padding="@dimen/margin_10"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp"
                android:maxLines="1" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/activity_registration_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/roundcornertextbox"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="@dimen/margin_10"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp"
                android:maxLines="1" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/activity_registration_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/roundcornertextbox"
                android:ems="10"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:padding="@dimen/margin_10"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15sp"
                android:maxLines="1" />

            <TextView
                android:id="@+id/activity_registration_register_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_40"
                android:background="@drawable/button_round_corner"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>