<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#051C3B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/complete_content_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="@dimen/margin_20"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/activity_login_email_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/roundcornertextbox"
                    android:ems="10"
                    android:hint="@string/user_name"
                    android:padding="@dimen/margin_10"
                    android:textColor="@android:color/black"
                    android:textColorHint="#C7C7C7"
                    android:textSize="15sp"
                    android:maxLines="1">

                    <requestFocus />
                </android.support.v7.widget.AppCompatEditText>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/activity_login_password_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_login_email_edittext"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/roundcornertextbox"
                    android:ems="10"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:padding="@dimen/margin_10"
                    android:textColor="@android:color/black"
                    android:textColorHint="#C7C7C7"
                    android:textSize="15sp"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/activity_login_forget_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_login_password_edittext"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginStart="@dimen/margin_20"
                    android:paddingTop="@dimen/margin_5"
                    android:text="@string/forgot_password"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/activity_login_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_login_password_edittext"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_50"
                    android:background="@drawable/button_round_corner"
                    android:ems="10"
                    android:text="@string/log_in"
                    android:textColor="#2A4057"
                    android:textColorHint="#ffffff"
                    android:textSize="@dimen/text_size_very_large"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/fb_login_join_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_login_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/button_round_corner"
                    android:ems="10"
                    android:text="@string/facebook"
                    android:textColor="#2A4057"
                    android:textColorHint="#ffffff"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/gu_login_join_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fb_login_join_us"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/button_round_corner"
                    android:ems="10"
                    android:text="@string/guest"
                    android:textColor="#2A4057"
                    android:textColorHint="#ffffff"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_member"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/activity_login_join_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView1"
                android:layout_toEndOf="@+id/textView1"
                android:paddingBottom="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_10"
                android:paddingStart="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_10"
                android:text="@string/click_here"
                android:textColor="#8EA8A7"
                android:textSize="@dimen/text_size_small" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>